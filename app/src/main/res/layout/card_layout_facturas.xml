<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#ACD3E8"
    app:cardCornerRadius="3dp"
    app:contentPadding="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemImageFactura"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="image_factura" />
        <TextView
            android:id="@+id/itemNoPedido"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/itemImageFactura"
            app:layout_constraintStart_toEndOf="@id/itemImageFactura"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/itemTipoPago"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/itemImageFactura"
            app:layout_constraintStart_toEndOf="@id/itemImageFactura"
            app:layout_constraintTop_toBottomOf="@id/itemNoPedido"/>
        <TextView
            android:id="@+id/itemEmpleadoFact"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/itemImageFactura"
            app:layout_constraintStart_toEndOf="@id/itemImageFactura"
            app:layout_constraintTop_toBottomOf="@id/itemTipoPago"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>